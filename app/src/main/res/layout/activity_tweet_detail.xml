<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.codepath.apps.jstweetapp.activities.TweetDetailActivity"
    android:padding="10dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/iv_tweetDetail_composerIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="larryshi"
        android:id="@+id/tv_tweetDetail_composerName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_tweetDetail_composerIcon"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@larryshijiawei"
        android:id="@+id/tv_tweetDetail_screenName"
        android:layout_alignLeft="@+id/tv_tweetDetail_composerName"
        android:layout_alignStart="@+id/tv_tweetDetail_composerName"
        android:layout_below="@+id/tv_tweetDetail_composerName"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the tweet body. http://google.com"
        android:id="@+id/tv_tweetDetail_body"
        android:layout_below="@+id/iv_tweetDetail_composerIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:autoLink="all"
        android:linksClickable="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_tweetDetail_image"
        android:layout_below="@+id/tv_tweetDetail_body"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tweetDetail_timeStamp"
        android:layout_below="@+id/iv_tweetDetail_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textSize="12dp" />
</RelativeLayout>
